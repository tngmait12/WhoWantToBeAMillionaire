@model IEnumerable<TopicModel>

<div class="container">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    Topics
                    <a asp-action="Create" asp-controller="TopicAdmin" class="btn btn-success">Create Topic</a>
                </div>
                <div class="card-body">
                    <p class="card-title"></p>
                    <table class="table table-hover" id="dataTables-example" width="100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>
                                        @if (item.Status == 1)
                                        {
                                            <span class="text text-success">On</span>
                                        }
                                        else
                                        {
                                            <span class="text text-danger">Off</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="TopicAdmin" asp-route-Id="@item.Id">Edit</a>
                                        <a onclick="return confirm('Are u sure to delete?')" asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="TopicAdmin" asp-route-Id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
