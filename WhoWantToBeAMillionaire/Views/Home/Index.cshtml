@{
    ViewData["Title"] = "Home Page";
}

<img class="logo" src="~/assets/img/WWTBAM_logo.png" alt="" style="width: 20rem;">
<div class="menu">
    <a class="help button" href="">Your Room</a>
    <a class="play button" asp-action="StartGame" asp-controller="Game">Play</a>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a class="play button" asp-area="admin" asp-action="Logout" asp-controller="AccountAdmin"><span>Hi, @User.Identity.Name! Logout</span></a>
        <a class="play button" asp-action="Index" asp-controller="Room">Create</a>
    }
    else
    {
        <a class="play button" asp-area="admin" asp-action="Login" asp-controller="AccountAdmin">Sign In</a>
        <a class="play button" asp-area="admin" asp-action="Register" asp-controller="AccountAdmin">Sign Up</a>
    }
    <a class="play button" asp-action="Index" asp-controller="Admin">Admin</a>
</div>
